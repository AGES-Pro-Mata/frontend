# Use consistent Node 22
FROM node:22-alpine

# Install dependencies for React 19 + modern tooling
RUN apk update && \
    apk upgrade --no-cache && \
    apk add --no-cache \
    git \
    curl \
    dumb-init \
    ca-certificates \
    python3 \
    make \
    gcc \
    g++ \
    libc6-compat \
    && rm -rf /var/cache/apk/*

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S reactjs -u 1001 -G nodejs

WORKDIR /app
RUN chown reactjs:nodejs /app

# Copy package files
COPY --chown=reactjs:nodejs package*.json ./

USER reactjs

# Install with exact versions for React 19 stability
RUN npm ci --prefer-offline --no-audit --no-fund --legacy-peer-deps

COPY --chown=reactjs:nodejs . .

EXPOSE 3000

HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD curl -f http://localhost:3000 || exit 1

ENV NODE_ENV=development
ENV VITE_API_URL=http://localhost:8080/api
ENV VITE_APP_ENV=development

# Use Vite dev server
CMD ["dumb-init", "npm", "run", "dev", "--", "--host", "0.0.0.0"]